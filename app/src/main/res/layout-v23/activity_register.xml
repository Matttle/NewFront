<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.auth.LoginActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="90dp"
        android:layout_height="115dp"
        android:src="@drawable/newlogo"
        app:layout_constraintBottom_toTopOf="@+id/loginCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginCard"
        android:layout_width="398dp"
        android:layout_height="324dp"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.Bridge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/primaryColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:orientation="vertical">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/primaryColor" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:drawableStart="@drawable/ic_action_name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/grey_500"
                android:hint="@string/first_amp_last_name"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="20sp"
                app:fontFamily="@font/bold"
                android:autofillHints="" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:drawableTint="@color/grey_500"
                android:hint="@string/fui_email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="20sp"
                app:fontFamily="@font/bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/grey_500"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="20sp"
                app:fontFamily="@font/bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/conpassword"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/grey_500"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="20sp"
                app:fontFamily="@font/bold"
                android:autofillHints="" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/to_register"
        style="@style/FirebaseUI.Button"
        android:layout_width="393dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/btn_create_account"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/create_account2"
        android:textColor="@color/grey_500"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/Theme.MaterialComponents.DayNight.Bridge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginCard"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/guestTxt"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:text="@string/continue_as_guest"
        android:textColor="@color/grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

</androidx.constraintlayout.widget.ConstraintLayout>